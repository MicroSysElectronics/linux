/dts-v1/;

#include "fsl-ls1046a.dtsi"
#include "qoriq-qman-portals-sdk.dtsi"
#include "qoriq-bman-portals-sdk.dtsi"

/ {
	model = "COMe-LS1046A/Ritec";
	compatible = "fsl,ls1046a-rdb", "fsl,ls1046a", "microsys,comels1046a";

	aliases {
		ethernet0 = &enet2; /* fm1mac3 */
		ethernet1 = &enet3; /* fm1mac4 */
		ethernet2 = &enet6; /* fm1mac9 */

		serial0 = &duart0;
		serial1 = &duart1;
		serial2 = &duart2;
		serial3 = &duart3;

		mdio0 = &mdio0;
		mdio1 = &xmdio0;

		crypto = &crypto;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&bman_fbpr {
	compatible = "fsl,bman-fbpr";
	alloc-ranges = <0 0 0x10000 0>;
};
&qman_fqd {
	compatible = "fsl,qman-fqd";
	alloc-ranges = <0 0 0x10000 0>;
};
&qman_pfdr {
	compatible = "fsl,qman-pfdr";
	alloc-ranges = <0 0 0x10000 0>;
};


&esdhc {
	compatible = "fsl,ls1046a-esdhc", "fsl,esdhc";
	//mmc-hs200-1_8v;
};

&duart0 {
	status = "okay";
};

&duart1 {
	status = "okay";
};

&i2c3 {
	status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio3 {
    status = "okay";
};

#include "fsl-ls1046-post.dtsi"

&ifc {
    status = "okay";

    nand0: nand@0,0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "fsl,ifc-nand";
        reg = <0x0 0x0 0x10000>;
        partition@0 {
            reg = <0x0 0x80000000>;
            label = "nand0";
        };
    };
};

&qspi {
    num-cs = <1>;
    bus-num = <0>;
    status = "okay";

    qflash0: s25fs512s@0 {
        compatible = "jedec,spi-nor","spansion,m25p80";
        #address-cells = <1>;
        #size-cells = <1>;
        spi-max-frequency = <20000000>;
        m25p,fast-read;
        reg = <0>;
        partition@ff {
            reg = <0x0 0x1000000>;
            label = "qflash0";
        };
    };

    qflash1: s25fs512s@1 {
        compatible = "jedec,spi-nor","spansion,m25p80";
        #address-cells = <1>;
        #size-cells = <1>;
        spi-max-frequency = <20000000>;
        m25p,fast-read;
        reg = <1>;
        partition@ff {
            reg = <0x0 0x1000000>;
            label = "qflash1";
        };
    };
};

&i2c0 {
    status = "okay";

    /*
    usbhub@44 { // TUSB8041
        reg = <0x44>;
    };
    */

    temp-sensor@4c {
        compatible = "ti,tmp451";
        reg = <0x4c>;
        extended-mode; // switch to extended temperature range from [-64..191]
        //interrupts = <GIC_SPI 132 IRQ_TYPE_LEVEL_LOW>; // THERM_ALERT# == TMP451.ALERT#
        #limit-cells = <4>;
        limits = <0x00 0xff 0xa4 0x8b>, // Local Temp.:  <-64 191 100 75>
                 <0x00 0xff 0xff 0x00>; // Remote Temp.: <-64 191 120 0>
    };

    rtc@51 {
        compatible = "microcrystal,rv8564";
        reg = <0x51>;
        interrupts = <GIC_SPI 131 IRQ_TYPE_LEVEL_LOW>;
    };

    eeprom@56 {
        compatible = "at24,24c64";
        reg = <0x56>;
    };

    eeprom@57 {
        compatible = "at24,24c64";
        reg = <0x57>;
    };

    /*
    clkgen@69 { // IDT6V49205
        reg = <0x69>;
    };
    */
};

&ifc {
	status = "okay";
	#address-cells = <2>;
	#size-cells = <1>;
	ranges = <0x0 0x0 0x0 0x7e800000 0x00010000>;
};

&nand0 {
        partition@0 {
            reg = <0x0 0x4000000>;
            label = "kernel0";
        };
        partition@1 {
            reg = <0x4000000 0x7c000000>;
            label = "rootfs0";
        };
};

&qflash0 {
		partition@0 {
			reg = <0x0 0x100000>;
			label = "rcw0";
		};
		partition@1 {
			reg = <0x100000 0x400000>;
			label = "fip0";
		};
		partition@2 {
			reg = <0x900000 0x40000>;
			label = "fman0";
		};
        partition@3 {
            reg = <0x940000 0x6c0000>;
            label = "r0";
        };
};

&qflash1 {
        partition@0 {
            reg = <0x0 0x100000>;
            label = "rcw1";
        };
        partition@1 {
            reg = <0x100000 0x400000>;
            label = "fip1";
        };
        partition@2 {
            reg = <0x900000 0x40000>;
            label = "fman1";
        };
        partition@3 {
            reg = <0x940000 0x6c0000>;
            label = "r1";
        };
};

&xmdio0 {
};

&mdio0 {
        rgmii_phy0: ethernet-phy@0 { // EC1, MAC3
            reg = <0x0>;
            phy-connection-type = "rgmii-id";
            //interrupts = <GIC_SPI 151 IRQ_TYPE_LEVEL_LOW>;
            ti,tx-internal-delay = <5>; // == 1.5ns
            ti,rx-internal-delay = <5>; // == 1.5ns
            ti,fifo-depth = <1>;
            enet-phy-lane-swap;
            ti,dp83867-rxctrl-strap-quirk;
        };

        rgmii_phy1: ethernet-phy@1 { // EC2, MAC4
            reg = <0x1>;
            phy-connection-type = "rgmii-id";
            //interrupts = <GIC_SPI 151 IRQ_TYPE_LEVEL_LOW>;
            ti,tx-internal-delay = <5>; // == 1.5ns
            ti,rx-internal-delay = <5>; // == 1.5ns
            ti,fifo-depth = <1>;
            enet-phy-lane-swap;
            ti,dp83867-rxctrl-strap-quirk;
        };

        sgmii_phy2: ethernet-phy@2 { // SGMII.9, MAC9@1af.0000
            reg = <0x2>;
            phy-connection-type = "sgmii";
            //interrupts = <GIC_SPI 151 IRQ_TYPE_LEVEL_LOW>;
            ti,fifo-depth = <1>;
        };
};

&soc {
#include "qoriq-dpaa-eth.dtsi"
#include "qoriq-fman3-0-6oh.dtsi"
};

&fsldpaa {

    ethernet@0 {
        status = "disabled";
    };

    ethernet@1 {
        status = "disabled";
    };

	ethernet@4 {
		status = "disabled";
	};

	ethernet@5 {
		status = "disabled";
	};

};

&fman0 {

	compatible = "fsl,fman", "simple-bus";

    ethernet@e4000 {
        phy-handle = <&rgmii_phy0>;
        phy-connection-type = "rgmii-id";
    };

    ethernet@e6000 {
        phy-handle = <&rgmii_phy1>;
        phy-connection-type = "rgmii-id";
    };

    ethernet@f0000 {
        phy-handle = <&sgmii_phy2>;
        phy-connection-type = "sgmii";
    };
};

