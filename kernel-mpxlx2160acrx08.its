/dts-v1/;

/ {
        description = "U-Boot fitImage for mpxlx2160acrx08";
        #address-cells = <2>;
        #size-cells = <1>;

        images {
                kernel-microsys_mpxlx2160a {
                        reg = <0x00 0x81080000 0x00>;
                        description = "Linux kernel";
                        data = /incbin/("arch/arm64/boot/Image");
                        type = "kernel";
                        arch = "arm64";
                        os = "linux";
                        compression = "none";
                        load = <0x81080000>;
                        entry = <0x81080000>;
                        hash-1 {
                            algo = "sha1";
                        };
                };
                fdt-microsys_mpxlx2160a-crx08.dtb {
                        reg = <0x00 0x90000000 0x00>;
                        description = "Flattened Device Tree blob";
                        data = /incbin/("arch/arm64/boot/dts/freescale/mpxlx2160a-crx08.dtb");
                        type = "flat_dt";
                        arch = "arm64";
                        compression = "none";
                        load = <0x90000000>;
                        hash-1 {
                            algo = "sha1";
                        };
                };
        };

        configurations {
            default = "conf-microsys_mpxlx2160a-crx08.dtb";
            conf-microsys_mpxlx2160a-crx08.dtb {
                description = "1 Linux kernel, FDT blob";
                kernel = "kernel-microsys_mpxlx2160a";
                fdt = "fdt-microsys_mpxlx2160a-crx08.dtb";
                hash-1 {
                    algo = "sha1";
                };
            };
        };
};
